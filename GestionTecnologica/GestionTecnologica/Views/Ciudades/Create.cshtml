@model GestionTecnologica.Models.Ciudad

@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPais" class="control-label"></label>
                <select asp-for="IdPais" class="form-control" asp-items="ViewBag.IdPais">
                    <option>
                        Seleccionar
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdDepartamento" class="control-label"></label>
                <select asp-for="IdDepartamento" class="form-control" asp-items="ViewBag.IdDepartamento">
                    <option>
                        Seleccionar
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            var item = "<option value = '0'>Seleccionar</option>";
            $("#IdDepartamento").html(item);

            $("#IdPais").change(function () {
                $("#IdDepartamento").html(item);
                var idPais = $(this).val();
                if (idPais != "") {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("GetDepartamentos", "Ciudades")',
                        dataType: 'json',
                        data: { idPais: idPais },
                        success: function (data) {
                            $.each(data, function (i, data) {
                                $("#IdDepartamento").append('<option value='
                                    + data.idDepartamento + '>'
                                    + data.nombre + '</option>');
                            });
                        },
                        error: function (ex) {
                            alert('Error al recuperar los departamentos. ' + ex);
                        }
                    });
                }
            });
        });
    </script>
}
